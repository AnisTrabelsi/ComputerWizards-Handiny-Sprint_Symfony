{% extends 'baseF.html.twig' %}


{% block body %}
<div class="card">
    <div class="card-body">
        <div class="block-space block-space--layout--after-header"></div>

        <div class="container container--max--lg">
            <div class="row">
                <div class="col-md-16 d-flex">
                    <style>
                        .card-title {
                            font-size: 24px;
                            font-weight: 600;
                            margin-bottom: 32px;
                        }

                        .form-control {
                            height: 56px;
                            border-radius: 4px;
                            border: 1px solid #ced4da;
                            font-size: 16px;
                            font-weight: 400;
                            color: #104D62;
                            padding: 16px;
                            transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
                        }

                        .form-control:focus {
                            border-color: #007bff;
                            outline: 0;
                            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
                        }

                        .btn-primary {
                            background-color: #41AF64;
                            border-color: #41AF64;
                            font-weight: 600;
                            transition: background-color 0.15s ease-in-out, border-color 0.15s ease-in-out;
                            border-radius: 4px;
                            padding: 16px;
                            font-size: 16px;
                        }

                        .btn-primary:hover {
                            background-color: #3d9e5d;
                            border-color: #3d9e5d;
                        }

                        .btn-block {
                            display: block;
                            width: 100%;
                        }

                        .text-center {
                            text-align: center;
                        }

                        .mt-4 {
                            margin-top: 16px;
                        }

                        .mb-3 {
                            margin-bottom: 16px;
                        }

                    </style>
                    <div class="container-fluid">
                        <div class="card flex-grow-1 mb-md-0 mr-0 mr-lg-3 ml-0 ml-lg-4 w-100">
                            <div class="card-body card-body--padding--2">
                                <h1 class="card-title text-center">Changer votre mot de passe</h1>
                                <style>
                                                                            /* Style pour le formulaire de réinitialisation de mot de passe */
                                    form.needs-validation input[type="password"] {
                                        border-radius: 0;
                                        border: none;
                                        border-bottom: 2px solid #ccc;
                                        padding: 10px;
                                        font-size: 16px;
                                    }

                                    form.needs-validation input[type="password"]:focus {
                                        outline: none;
                                        border-bottom-color: #007bff;
                                    }

                                    form.needs-validation .invalid-feedback {
                                        color: #dc3545;
                                    }

                                    form.needs-validation .btn-primary {
                                        background-color: #007bff;
                                        border: none;
                                        border-radius: 5px;
                                        padding: 10px 20px;
                                        font-size: 16px;
                                        font-weight: bold;
                                    }

                                    form.needs-validation .btn-primary:hover {
                                        background-color: #0069d9;
                                    }

                                </style>
                           
                            
                                    {{ form_start(resetForm, {'attr': {'class': 'needs-validation', 'novalidate': ''}}) }}
                                    <div class="form-group">
                                        {{ form_row(resetForm.plainPassword, {'attr': {'class': 'form-control', 'placeholder': 'Nouveau mot de passe', 'required': 'required'}}) }}
                                        <div class="invalid-feedback">
                                            {{ form_errors(resetForm.plainPassword) }}
                                        </div>
                                    </div>
                                    <div class="text-center">
                                <button class="btn btn-primary btn-block" style="background-color: #41AF64;">Réinitialisez votre mot de passe</button>
                            </div>
                                    {{ form_end(resetForm) }}
                                    <br>
                                        <div class="text-center">
                                            <a href="{{ path('app_login') }}" style="color: #104D62 ;"> Retourner à la page de connexion</a>
                            
                                        </div>
                          
                                    </div>
                         </div>    
                    </div>
                </div>
            </div>
                
        </div>
    </div>
</div>

      


{% endblock %}
