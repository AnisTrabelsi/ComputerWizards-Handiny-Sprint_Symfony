{% extends 'baseF.html.twig' %}
{% block title %}
	Liste de commentaires
{% endblock %}

{% block body %}
	<h1>Commentaire</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>IdCommentaire</th>
				<td>{{ commentaire.idCommentaire }}</td>
			</tr>
			<tr>
				<th>ContenuCommentaire</th>
				<td>{{ commentaire.contenuCommentaire }}</td>
			</tr>
			<tr>
				<th>DatePublication</th>
				<td>{{ commentaire.datePublication ? commentaire.datePublication|date('Y-m-d') : '' }}</td>
			</tr>
			<tr>
				<th>NbMentions</th>
				<td>{{ commentaire.nbMentions }}</td>
			</tr>
			<tr>
				<th>Piecejointe</th>
				<td>
					{% if commentaire.piecejointe %}
						<img src="{{ asset('image_directory/' ~ commentaire.piecejointe) }}" alt="Image du commentaire" width="80" height="80">
					{% endif %}
				</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('app_commentaire_index') }}">back to list</a>

	<a href="{{ path('app_commentaire_edit', {'idCommentaire': commentaire.idCommentaire}) }}">edit</a>

	{{ include('commentaire/_delete_form.html.twig') }}
{% endblock %}
