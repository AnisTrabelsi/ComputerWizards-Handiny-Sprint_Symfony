{% extends 'base.html.twig' %}

{% block title %}Chauffeur index{% endblock %}

{% block body %}
    <h1>Chauffeur index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>IdChauffeur</th>
                <th>Cin</th>
                <th>Nom</th>
                <th>Adresse</th>
                <th>StatutDisponibilite</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for chauffeur in chauffeurs %}
            <tr>
                <td>{{ chauffeur.idChauffeur }}</td>
                <td>{{ chauffeur.cin }}</td>
                <td>{{ chauffeur.nom }}</td>
                <td>{{ chauffeur.adresse }}</td>
                <td>{{ chauffeur.statutDisponibilite ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_chauffeur_show', {'idChauffeur': chauffeur.idChauffeur}) }}">show</a>
                    <a href="{{ path('app_chauffeur_edit', {'idChauffeur': chauffeur.idChauffeur}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_chauffeur_new') }}">Create new</a>
{% endblock %}
