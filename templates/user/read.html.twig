	<!-- Afficher les messages Flash avec Toastr -->
	{% for type, messages in app.session.flashBag.all() %}
	{% for message in messages %}
	   <script>
		  toastr.{{ type }}('{{ message }}');
	   </script>
	{% endfor %}
