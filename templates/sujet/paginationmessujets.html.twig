<div class="posts-view__pagination">
	<ul class="pagination">
		{% if sujets|length > 0 %}
			<li class="page-item {% if sujets.getCurrentPageNumber() == 1 %}disabled{% endif %} disabled">
				<a class="page-link page-link--with-arrow" href="{{ path('app_sujet_search2', {'page': sujets.getCurrentPageNumber() - 1}) }}" aria-label="Previous">
					<span class="page-link__arrow page-link__arrow--left" aria-hidden="true">
						<svg width="7" height="11">
							<path d="M6.7,0.3L6.7,0.3c-0.4-0.4-0.9-0.4-1.3,0L0,5.5l5.4,5.2c0.4,0.4,0.9,0.3,1.3,0l0,0c0.4-0.4,0.4-1,0-1.3l-4-3.9l4-3.9C7.1,1.2,7.1,0.6,6.7,0.3z"/>
						</svg>
					</span>
				</a>
			</li>
			{% for page in pagesInRange %}
				<li class="page-item {% if sujets.getCurrentPageNumber() == page %}active{% endif %}">
					<a class="page-link" href="{{ path('app_sujet_search2', {'page': page}) }}">{{ page }}</a>
				</li>
			{% endfor %}
			<li class="page-item {% if sujets.getCurrentPageNumber() == lastPageNumber %}disabled{% endif %}">
				<a class="page-link page-link--with-arrow" href="{{ path('app_sujet_search2', {'page': sujets.getCurrentPageNumber() + 1}) }}" aria-label="Next">
					<span class="page-link__arrow page-link__arrow--right" aria-hidden="true">
						<svg width="7" height="11">
							<path d="M0.3,10.7L0.3,10.7c0.4,0.4,0.9,0.4,1.3,0L7,5.5L1.6,0.3C1.2-0.1,0.7,0,0.3,0.3l0,0c-0.4,0.4-0.4,1,0,1.3l4,3.9l-4,3.9
																																																																											C-0.1,9.8-0.1,10.4,0.3,10.7z"/>
						</svg>
					</span>
				</a>
			</li>
		{% endif %}
	</ul>
</div>