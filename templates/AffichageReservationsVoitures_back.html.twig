{% extends 'baseB.html.twig' %}
{% block body %}
 <div class="nk-content">
                    <div class="container">
                        <div class="nk-content-inner">
                            <div class="nk-content-body">
                                <div class="nk-block-head">
                                    <div class="nk-block-head-between flex-wrap gap g-2">
                                        <div class="nk-block-head-content">
                                            <h2 class="nk-block-title">Liste de réservations de voitures
                                                </h1>
                                                <nav>
                                                    
                                                </nav>
                                        </div>
                                        <div class="nk-block-head-content">
                                            <ul class="d-flex">
                                                <li>
                                                    <a href="#" class="btn btn-md d-md-none btn-primary">
                                                        <em class="icon ni ni-plus"></em>
                                                        <span>Create</span>
                                                    </a>
                                                </li>
                                                
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                                <div class="nk-block">
                                    <div class="card">
                                   <div class="search-bar">
  <form action="{{ path('app_reservation_voiture_index') }}" method="get">
    <div class="search-container">
      <input type="text" name="search" placeholder="Recherche...">
      <button type="submit"><i class="fas fa-search"></i></button>
    </div>
  </form>
   <a href="{{ path('imprimer_reservations_voitures')}}" class="btn btn-sm btn-icon btn-lighter" title="Print">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
        <path d="M0 0h24v24H0z" fill="none"/>
        <path d="M21 7h-6V3h-4v4H3c-.55 0-1 .45-1 1v8c0 .55.45 1 1 1h2v4h14v-4h2c.55 0 1-.45 1-1V8c0-.55-.45-1-1-1zm-6 7H9v-2h6v2zm4-4H5V9h14v1z"/>
    </svg>
</a>
</div>
<style>
.search-bar {
  display: flex;
  justify-content: center;
  margin: 20px 0;
}

.search-container {
  display: flex;
  position: relative;
  width: 400px;
  height: 40px;
  background-color: #fff;
  border-radius: 20px;
  overflow: hidden;
  border: 2px solid #ccc;
}

.search-container input[type="text"] {
  width: 100%;
  height: 100%;
  padding: 10px 20px;
  font-size: 16px;
  border: none;
  outline: none;
}

.search-container button {
  position: absolute;
  top: 0;
  right: 0;
  height: 100%;
  width: 60px;
  background-color: #5f38f9;
  color: #fff;
  border: none;
  border-radius: 0 20px 20px 0;
  cursor: pointer;
}

.search-container button i {
  font-size: 20px;
  padding: 10px;
}

.search-container button:hover {
  background-color: #286090;
}

</style>
                                        <table class="datatable-init table" data-nk-container="table-responsive">
                                            <thead class="table-light">
                                                <tr>
                                                    <th class="tb-col tb-col-check" data-sortable="false">
                                                        <div class="form-check">
                                                            <input class="form-check-input" type="checkbox" value="">
                                                        </div>
                                                    </th>
                                                    <th class="tb-col">
                                                        <span class="overline-title">Id De Réservation</span>
                                                    </th>
                                                    <th class="tb-col">
                                                        <span class="overline-title">Date de Demande</span>
                                                    </th>
                                                    <th class="tb-col">
                                                        <span class="overline-title">Date de début</span>
                                                    </th>
                                                    <th class="tb-col">
                                                        <span class="overline-title">Date de Fin</span>
                                                    </th>
                                                    <th class="tb-col tb-col-xl">
                                                        <span class="overline-title">Description</span>
                                                    </th>
                                                    <th class="tb-col tb-col-xxl">
                                                        <span class="overline-title">Status</span>
                                                    </th>
                                                    <th class="tb-col tb-col-end" data-sortable="false">
                                                        <span class="overline-title">Actions</span>
                                                    </th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                            {% for reservation in reservation_voitures %}
                                                <tr>
                                                    <td class="tb-col tb-col-check">
                                                        <div class="form-check">
                                                            <input class="form-check-input" type="checkbox" value="">
                                                        </div>
                                                    </td>
                                                    <td class="tb-col">
                                                        <a href="https://html.nioboard.themenio.com/apps/invoice/invoice-preview.html"
                                                            class="text-light">#{{reservation.getId()}}</a>
                                                    </td>
                                                    <td class="tb-col">
                                                        <span>{{reservation.getDateDemandeReservation()|date('d-m-Y')}}</span>
                                                    </td>
                                                    <td class="tb-col">
                                                        <span>{{reservation.getDateDebutReservation()|date('d-m-Y')}}</span>
                                                    </td>
                                                    <td class="tb-col">
                                                        <span>{{reservation.getDateFinReservation()|date('d-m-Y')}}</span>
                                                    </td>
                                                    <td class="tb-col tb-col-xl">
                                                        <span>{{reservation.getDescriptionReservation()}}</span>
                                                    </td>
                                                    <td class="tb-col">
                                                        {% if reservation.getEtatDemandeReservation() == "en cours" %}
                                                            <span class="badge text-bg-warning-soft">{{reservation.getEtatDemandeReservation()}}</span>
                                                        {% elseif reservation.getEtatDemandeReservation() == "Acceptée" %}
                                                            <span class="badge text-bg-success-soft">{{reservation.getEtatDemandeReservation()}}</span>
                                                        {% else %}
                                                            <span class="badge text-bg-danger-soft">{{reservation.getEtatDemandeReservation()}}</span>
                                                        {% endif %}
                                                    </td>

                                                    <td class="tb-col tb-col-end">
                                                        <div class="d-flex justify-content-end gap g-2">
                                                            
                                                            <div class="gap-col">
                                                        
                                                                <a href="{{ path('app_reservation_back_detail', {'id': reservation.getId()}) }}"
                                                                    class="btn btn-sm btn-lighter">Détails</a>
                                                            </div>
                                                        </div>
                                                    </td>
                                                </tr>
                                                {% endfor %}	
                                               
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
{% endblock %}