{% extends 'baseF.html.twig' %}


{% block title %}chauffeur index{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  <style>
 /* Styling for the form title */
h1 {
  font-size: 3rem;
  margin: 2rem auto 1rem auto;
  text-align: center;
  color: #333;
  font-weight: bold;
  text-transform: uppercase;
  letter-spacing: 0.1em;
}


/* Styling for the form container */
.form-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background-color: #f4f4f4;
    height: 100vh;
  
}


/* Styling for the form itself */
.form-horizontal {
  width: 100%;
  max-width: 500px;
  padding: 2rem;
  background-color: white;
  border-radius: 8px;
  box-shadow: 0px 2px 6px rgba(0, 0, 0, 0.1);
  margin: 0 auto;
  
}

/* Styling for the form inputs */
.form-control {
  padding: 0.5rem 0.75rem;
  border-radius: 0.25rem;
  border: 1px solid #ced4da;
  font-size: 1rem;
  margin-bottom: 1rem;
}

/* Styling for the form labels */
.control-label {
  font-size: 1rem;
  font-weight: 600;
  margin-bottom: 0.5rem;
}

/* Styling for the form buttons */
.btn-container {
  display: flex;
  justify-content: center;
    
}

.btn {
  padding: 0.5rem 1rem;
  border-radius: 0.25rem;
  font-size: 1rem;
  font-weight: 600;
  cursor: pointer;
  transition: background-color 0.2s ease-in-out;
}

.btn-primary {
  color: white;
  background-color: #red;
  border-color: #red;
}

.btn-primary:hover {
  background-color: #black;
}


    
  </style>
{% endblock %}
