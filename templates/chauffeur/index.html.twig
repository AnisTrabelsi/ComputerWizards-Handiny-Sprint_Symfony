{% extends 'baseB.html.twig' %}



{% block title %}Chauffeur index{% endblock %}

{% block body %}
    <h1>Chauffeur index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>IdChauffeur</th>
                <th>Cin</th>
                <th>Nom</th>
                <th>Adresse</th>
                <th>StatutDisponibilite</th>
                <th>QR code</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
         {%  for message in app.flashes('ADD')  %}
                               <div class="alert alert-success" role="alert">
                                   {{message}}                               </div>
                           {% endfor %}
        {%  for message in app.flashes('delC')  %}
                               <div class="alert alert-danger" role="alert">
                                   {{message}}                               </div>
                           {% endfor %}
        {% for chauffeur in chauffeurs %}
            <tr>
                <td>{{ chauffeur.idChauffeur }}</td>
                <td>{{ chauffeur.cin }}</td>
                <td>{{ chauffeur.nom }}</td>
                <td>{{ chauffeur.adresse }}</td>
                <td>{{ chauffeur.statutDisponibilite ? 'Yes' : 'No' }}</td>

            
                {% set qrData = "Nom du transporteur = "~chauffeur.nom~" => { cin = "~chauffeur.cin~ " , adresse = "~chauffeur.adresse~"  }" %}
                
             


 <td class="invert"><img style="width: 100px" class="rounded mx-auto d-block" src="{{ qr_code_data_uri(qrData) }}" /></td>
                <td>
                    <a href="{{ path('app_chauffeur_show', {'idChauffeur': chauffeur.idChauffeur}) }}">show</a>
                    <a href="{{ path('app_chauffeur_edit', {'idChauffeur': chauffeur.idChauffeur}) }}">edit</a>
                </td>
                 
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div style="right: 0">{{ knp_pagination_render(chauffeurs) }}</div>

    <a href="{{ path('app_chauffeur_new') }}">Create new</a>
{% endblock %}
