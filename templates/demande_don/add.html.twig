{% extends 'BaseF.html.twig' %}
{% block stylesheets %}
  {{ parent() }}
  <style>
 /* Styling for the form title */
h1 {
  font-size: 3rem;
  margin: 2rem auto 1rem auto;
  text-align: center;
  color: #333;
  font-weight: bold;
  text-transform: uppercase;
  letter-spacing: 0.1em;
}


/* Styling for the form container */
.form-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background-color: #f4f4f4;
    height: 100vh;
  
}


/* Styling for the form itself */
.form-horizontal {
  width: 100%;
  max-width: 500px;
  padding: 2rem;
  background-color: white;
  border-radius: 8px;
  box-shadow: 0px 2px 6px rgba(0, 0, 0, 0.1);
  margin: 0 auto;
  
}

/* Styling for the form inputs */
.form-control {
  padding: 0.5rem 0.75rem;
  border-radius: 0.25rem;
  border: 1px solid #ced4da;
  font-size: 1rem;
  margin-bottom: 1rem;
}

/* Styling for the form labels */
.control-label {
  font-size: 1rem;
  font-weight: 600;
  margin-bottom: 0.5rem;
}

/* Styling for the form buttons */
.btn-container {
  display: flex;
  justify-content: center;
    
}

.btn {
  padding: 0.5rem 1rem;
  border-radius: 0.25rem;
  font-size: 1rem;
  font-weight: 600;
  cursor: pointer;
  transition: background-color 0.2s ease-in-out;
}

.btn-primary {
  color: white;
  background-color: #red;
  border-color: #red;
}

.btn-primary:hover {
  background-color: #black;
}


    
  </style>
{% endblock %}

{% block body %}

<h1>Ajouter une demande don</h1>

{{ form_start(myForm, {'attr': {'novalidate': 'novalidate', 'class': 'form-horizontal'}}) }}


  <div class="form-group">
    {{ form_label(myForm.justificatifHandicap, 'Justificatif_Handicap: ', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
    <div class="col-sm-10">
      {{ form_widget(myForm.justificatifHandicap, {'attr': {'class': 'form-control'}}) }}
     
     {% if form_errors(myForm.justificatifHandicap) %}
    <div class="alert alert-danger alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <div class="alert-icon">
            <i class="fas fa-exclamation-triangle"></i>
        </div>
        <div class="alert-message">
            {{ form_errors(myForm.justificatifHandicap) }}
        </div>
    </div>
{% endif %}
    </div>
  </div>
  

  <div class="form-group">
    {{ form_label(myForm.remarques, 'Remarques', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
    <div class="col-sm-10">
      {{ form_widget(myForm.remarques, {'attr': {'class': 'form-control'}}) }}
     {% if form_errors(myForm.remarques) %}
    <div class="alert alert-danger alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <div class="alert-icon">
            <i class="fas fa-exclamation-triangle"></i>
        </div>
        <div class="alert-message">
            {{ form_errors(myForm.remarques) }}
        </div>
    </div>
{% endif %}
    </div>
  </div>

 

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      {{ form_widget(myForm.Save, {'attr': {'class': 'btn btn-primary'}}) }}
    </div>
  </div>
{{ form_errors(myForm) }}
{{ form_end(myForm) }}

<!-- Inclusion de la bibliothèque Alertify.js -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/AlertifyJS/1.13.1/css/alertify.min.css" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/AlertifyJS/1.13.1/alertify.min.js"></script>
 <style>

/* Positionnement de la popup */
.ajs-dialog {
  top: 120px;
}

/* Personnalisation du titre */
.ajs-header {
  background-color: #4CAF50;
  color: #4CAF50;
  font-size: 28px;
  font-weight: bold;
  text-align: center;
  padding: 30px;
  border-radius: 10px 10px 0 0;
}

/* Animation du titre */
@keyframes fadeInDown {
  from {
    opacity: 0;
    transform: translateY(-30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.ajs-header {
  animation-duration: 2s;
  animation-name: fadeInDown;
}

/* Personnalisation du contenu */
.ajs-content {
  font-size: 18px;
  text-align: center;
  padding: 30px;
}

/* Personnalisation du bouton OK */
.ajs-ok {
  background-color: #4CAF50;
  color: #fff;
  border: none;
  border-radius: 4px;
  padding: 10px 20px;
  font-size: 18px;
  cursor: pointer;
  transition: background-color 2s ease;
}

.ajs-ok:hover {
  background-color: #3e8e41;
}

/* Personnalisation du titre */
.ajs-header {
  background-color: #4CAF50;
  color: #4CAF50;
  font-size: 28px;
  font-weight: bold;
  text-align: center;
  padding: 30px;
  border-radius: 5px 5px 0 0;
}

/* Personnalisation du corps du message */
.ajs-message {
  font-size: 18px;
  text-align: center;
  padding: 30px;
}

/* Personnalisation des boutons */
.ajs-button {
  font-size: 18px;
  font-weight: bold;
  padding: 10px 20px;
  margin: 10px;
  border-radius: 5px;
}

/* Personnalisation du bouton OK */
.ajs-ok {
  background-color: #4CAF50;
  color: #fff;
}

/* Positionnement de la notification */
.ajs-notifier {
  top: 20px;
  right: 20px;
  width: 400px;
  z-index: 999999;
}

/* Animation d'entrée de la notification */
@keyframes slideInRight {
  from {
    transform: translateX(100%);
  }
  to {
    transform: translateX(0);
  }
}

.ajs-notifier {
  animation-duration: 2s;
  animation-name: slideInRight;
}
.ajs-content {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  padding-top: 20px;
}

.ajs-content:before {
  position: absolute;
  content: "";
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 80px;
  height: 80px;
  background-color: #4CAF50;
  border-radius: 50%;
  animation: checkmark 2s ease-out;
}

.ajs-content .fas.fa-check {
  position: relative;
  z-index: 1;
  font-size: 50px;
  color: #black;
}

@keyframes checkmark {
  0% {
    width: 0;
    height: 0;
    opacity: 0;
  }
  100% {
    width: 80px;
    height: 80px;
    opacity: 1;
  }
}

.ajs-header {
  background-color: #4CAF50;
  color: #4CAF50;
  font-size: 28px;
  font-weight: bold;
  text-align: center;
  padding: 30px;
}

.ajs-dialog.fadeout {
  animation: fadeout 0.5s ease-in-out forwards;
}

@keyframes fadeout {
  0% {
    opacity: 1;
    transform: translateY(0);
  }
  100% {
    opacity: 0;
    transform: translateY(-30px);
  }
}



 </style>
{% if app.flashes('success') %}
    <script>
        alertify.defaults.glossary.title = 'Demande Don ajoutée avec succès';
        alertify.defaults.theme.ok = 'btn btn-primary';
        alertify.set('notifier','position', 'top-center');
        alertify.alert('<i class="fas fa-check"></i> {{ app.flashes('success') ? app.flashes('success')[0] : "" }}', function(){
            window.location.href = '{{ path('app_list_demandedon') }}';
        }).setId('my-alert');
        document.getElementById("my-alert").classList.add("my-class");
    </script>
{% endif %}


{% endblock %}
